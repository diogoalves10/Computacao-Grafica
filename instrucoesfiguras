//coordenadas dos pontos para criar as figuras


glBegin(GL_TRIANGLES);

//criar o plano : usei os triangulos que usamos para criar a base das piramides

		// base
		glVertex3f(-1.0f, 0.0f, -1.0f);
		glVertex3f(-1.0f, 0.0f, 1.0f);
		glVertex3f(1.0f, 0.0f, 1.0f);

         glVertex3f(-1.0f, 0.0f,-1.0f);
         glVertex3f(1.0f, 0.0f, 1.0f);
         glVertex3f(1.0f, 0.0f, -1.0f);

 //criar a caixa
	
        // base
              glColor3b(0, 20, 0);
    glVertex3f(1.0f, -1.0f, 1.0f);
    glVertex3f(1.0f, -1.0f,-1.0f);
    glVertex3f(-1.0f, -1.0f, 1.0f);

    glVertex3f(1.0f, -1.0f,-1.0f);
    glVertex3f(-1.0f, -1.0f, -1.0f);
    glVertex3f(-1.0f, -1.0f, 1.0f);

    //criar a caixa


    //topo azul
    glVertex3f(1.0f, 1.0f, 1.0f);
    glVertex3f(1.0f, 1.0f,-1.0f);
    glVertex3f(-1.0f, 1.0f, 1.0f);

    glVertex3f(1.0f, 1.0f,-1.0f);
    glVertex3f(-1.0f, 1.0f, -1.0f);
    glVertex3f(-1.0f, 1.0f, 1.0f);



    //lateral direita
